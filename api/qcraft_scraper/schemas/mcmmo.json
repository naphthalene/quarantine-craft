{
  "$schema": "https://json-schema.org/schema#",
  "title": "McMMO",
  "type": "object",
  "description": "MMO Skills and Stats",
  "required": ["players"],
  "properties": {
    "players": {
      "type": "array",
      "description": "List of players",
      "items": {
        "type": "object",
        "description": "Player levels and experience counters",
        "required": ["nick", "skills"],
        "properties": {
          "nick": {
            "type": "string",
            "description": "Player nickname"
          }
        }
      }
    }
  }
}
